# This Makefile defines the rules for building the GRL and literature review
# PDFs and cleaning up the junk generated by LaTeX.


# The name of the main .tex files to build
GRL = grl_paper
LIT = literature_review
# Other files that are needed to build the PDFs
BIB_FILES := $(wildcard *.bib)
FIG_FILES := $(wildcard figures/*)
# Folder where output will be placed
OUTDIR = output
# Name of the output file
OUTPUT = $(OUTDIR)/$(DOCUMENT).pdf

LATEX_COMPILER = latexmk -pdf -outdir=$(OUTDIR)

all: grl

clean:
	rm -rvf $(OUTDIR) figures/*eps-converted-to.pdf

grl: $(OUTDIR)/$(GRL).pdf

lit: $(OUTDIR)/$(LIT).pdf

$(OUTDIR)/$(GRL).pdf: $(GRL).tex $(FIG_FILES) $(BIB_FILES)
	$(LATEX_COMPILER) $<

$(OUTDIR)/$(LIT).pdf: $(LIT).tex $(FIG_FILES) $(BIB_FILES)
	$(LATEX_COMPILER) $<

